						var checkboxList = [
							'Новости и группы',
							'Новости для акционеров',
							'Новости листинга',
							'Индексы',
							'IT-новости',
							'Итоги торгов'
						]

					include ../../modules/checkbox-list/module
				.col-xs-12.col-md-6
					-
						var checkboxList = [
							'Фондовый рынок',
							'Срочный рынок',
							'Валютный рынок',
							'Денежный рынок',
							'Рынок Инноваций и Инвестиций',
							'Анонсы Мероприятий'
						]

					include ../../modules/checkbox-list/module
				
